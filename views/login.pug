extend layout
block content
    h2.page-header Account Login
    form(method="post" action="/users/login")
        .form-group
            label(for="username") Username
            input(type="text" name="username" class="form-control" placeholder="Username")
        
        .form-group
            label(for="password") Password
            input(type="password" name="password" class="form-control" placeholder="Password")
        
        button(type="submit" class="btn btn-primary") Login
    div(style="margin-top:10px")
        a(href="auth/facebook" class="btn btn-primary btn-lg" role="button" style="font-size:45px; width:90px;") 
            i.fa.fa-facebook(aria-hidden='true') 

        a(href="/auth/google" class="btn btn-danger btn-lg" role="button" style="font-size:45px; width:90px;") 
            i.fa.fa-google(aria-hidden='true')    

        a(href="/auth/twitter" class="btn btn-info btn-lg" role="button"  style="font-size:45px; width:90px;") 
            i.fa.fa-twitter(aria-hidden='true')      